{
  "name": "petals",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.7.1",
    "@material-ui/icons": "^3.0.1",
    "parcel-bundler": "^1.11.0",
    "react": "^16.7.0",
    "react-dom": "^16.8.3",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.1",
    "redux-form": "^8.1.0",
    "redux-saga": "^1.0.1"
  },
  "scripts": {
    "start": "NODE_ENV=development parcel serve -p 3000 public/index.html",
    "build": "NODE_ENV=production parcel build --no-source-maps public/index.html",
    "qa-build": "rm -rf dist & NODE_ENV=development parcel build public/index.html",
    "prebuild": "rm -rf dist",
    "test": "jest",
    "tslint": "tslint -c ./tslint.json --format stylish --project ./tsconfig.json 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write ./{src,__tests__}/**/*.{ts,tsx}",
    "clean": "rm -rf .cache & rm -rf dist"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/material-ui": "^0.21.5",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux": "^3.6.0",
    "@types/redux-form": "^7.4.15",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "prettier": "^1.15.3",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333"
  }
}
